# .env_sample - Template for environment variables

# Django settings
DJANGO_SECRET_KEY=  # Secret key for Django project (GENERATE A SECURE KEY!)
DJANGO_DEBUG=  # Set to True for development, False for production
DJANGO_DATABASE_NAME=  # Name of the SQL Server database
DJANGO_DATABASE_USER=  # Username for SQL Server
DJANGO_DATABASE_PASSWORD=  # Password for SQL Server
DJANGO_DATABASE_HOST=  # Hostname or IP address of the SQL Server instance
DJANGO_DATABASE_PORT=  # Port for SQL Server (optional, usually default)
DJANGO_DATABASE_OPTIONS_DRIVER=  # ODBC Driver for SQL Server (e.g., ODBC Driver 17 for SQL Server)

# Redis settings
REDIS_HOST=  # Hostname for Redis server (usually localhost)
REDIS_PORT=  # Port for Redis server (usually 6379)
REDIS_DB=  # Redis database number (usually 0)

# Cache settings
CACHE_ENABLED=  # Set to True to enable caching
CACHE_LOCATION=  # URL of the cache server (e.g., redis://127.0.0.1:6379/0)
